  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/dangvinh/mcp-ocr-server/issues"
  },
  "homepage": "https://github.com/dangvinh/mcp-ocr-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
