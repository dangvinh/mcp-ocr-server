{
  "name": "mcp-ocr-server",
  "version": "1.0.0",
  "description": "**MCP server for OCR using native Tesseract (C++), built with Node.js, delivering up to 10x faster performance than tesseract.js and integrable with ChatGPT Desktop.**",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build-addon": "cd cpp && npx node-gyp rebuild",
    "build-core": "mkdir -p cpp/build-core && cd cpp/build-core && cmake .. && cmake --build .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageReporters=text-lcov",
    "prepare": "husky",
    "lint": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.cjs,.mjs --fix",
    "format": "prettier --write .",
    "prebuild": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dangvinh/mcp-ocr-server.git"
  },
  "keywords": [
    "mcp",
    "ocr",
    "tesseract",
    "nodejs",
    "chatgpt",
    "desktop",
    "ai-agent"
  ],
  "author": "Vinh Dang",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/dangvinh/mcp-ocr-server/issues"
  },
  "homepage": "https://github.com/dangvinh/mcp-ocr-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.4",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.34.0",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "codecov": "^3.8.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "node-addon-api": "^8.5.0",
    "node-gyp": "^11.4.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  }
}
