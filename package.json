  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dangvinh/mcp-ocr-server.git"
  },
  "keywords": [
    "mcp",
    "ocr",
    "tesseract",
    "nodejs",
    "chatgpt",
    "desktop",
    "ai-agent"
  ],
