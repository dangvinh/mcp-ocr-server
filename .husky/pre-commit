#!/bin/sh
# Load Husky environment
. "$(dirname "$0")/_/husky.sh"

# Run ESLint fix to automatically fix linting issues
npm run lint:fix

# Run Jest with coverage (does not fail commit on coverage thresholds)
npm test -- --coverage --coverageReporters=text-lcov || true

# Run tests (allow failure so commit is not blocked)
npm test || true
